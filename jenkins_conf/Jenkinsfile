pipeline {
    agent any
    environment {
        registry = "aminbentani2000/node"
        registryCredential = 'dockerhub_id'
        dockerImage = ''
    }
    stages {
        stage('Checkout git repo') {
            steps {
                git branch: 'main', url: 'https://github.com/bentaniamin1/express_app.git'
            }
        }
        stage('Building our image') {
            steps{script {dockerImage = docker.build registry + ":$BUILD_NUMBER"}
                
        }
        }
        stage('check image trivy') {
            steps {
                script {
                    dockerImage.inside {
                        sh 'trivy image --exit-code 1 --severity HIGH,CRITICAL --no-progress $DOCKER_IMAGE'
                    }
                }
            }
        }
        stage('Pushing image to DockerHub test') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', registryCredential) {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}